		display inline-block
		float right
		font-size 1.2em
		margin-right .5em
		margin-top .5em
		text-shadow 2px 2px 2px rgba(0,0,0,.5)

.pdf
	background rgba(#D23F34, .6)
.doc
	background rgba(#2D6797, .6)
.xls
	background rgba(#6FA031, .6)
.web
	background rgba(#40444F, .6)
.ppt
	background rgba(#F67015, .6)

.header
	background color_black
	border-bottom 1px solid color_lgray
	display table
	height 3em
	position fixed
	top 0
	vertical-align middle
	width 100%
	z-index 99
	.logo
		
		float left
		position relative
		top 10px
		margin .1em 0 0 2em
		img
			height 1.5em
