@import 'normalize.styl'
@import 'nib'

vendor-prefixes = webkit moz ms official

family = Helvetica, Arial, sans-serif
color_green = #8ab327
color_dgray = #333333
color_lgray = #444444
color_white = #eeeeee
color_black = #212121
color_veryBlack = #000000

a
	color color_green
	cursor pointer
	text-decoration none
body
	background color_dgray
	font-family family
	font-size 100%

input[type='range']
	appearance none
	width 8%
	height 5px
	display inline-block
	outline none
	vertical-align middle
	border-radius 5px
	background color_dgray
	padding 0
input[type='range']::-webkit-slider-thumb
	appearance none
	width 1em
	height 1em
	border-radius 50%
	background color_green
::-ms-track
	width 5em
	height 5px
	display inline-block
	outline none
	vertical-align middle
	border-radius 5px
	background color_black
progress
	appearance none
	display inline-block
	height .7em
	position relative
	width 70%
	&::-webkit-progress-bar
		background color_dgray
		border-radius 5px
	&::-webkit-progress-value
		background color_green
		border-radius 5px

video
	box-shadow 2px 2px 3px 1px rgba(color_black,.5)
	&::-webkit-media-controls
		display none

#content
	background color_black
	bottom 0
	position fixed
	right 0
	top 3em
	width 25%
	z-index 0
	.container
		left .5em
		.speakerContainer
			position relative
			top .5em
			overflow-y auto
			overflow-x hidden
			width 97%
			margin-bottom 1.5em
		.slidesContainer
			position relative
			top 1em
			overflow-y auto
			overflow-x hidden
			height 15em
			width 97%
			margin-bottom 1.5em
			.list
				color color_white
				display block
				left 1em
				margin 0
				position relative
				padding-right 1em
				font-size .9em
				.listItem
					cursor pointer
					&:hover
						color color_green
					&.active
						color color_green
		.handoutsContainer
			position relative
			top 1em
			overflow-y auto
			overflow-x hidden
			height 24em
			width 97%
			margin-bottom 1.5em

.slideTitle
	color color_white
	margin 0 .5em

#preloader
	background rgba(color_black,.5)
	position absolute
	width 800px
	height 450px
	z-index 100
	color color_white
	display block
	p
		line-height 400px

#previous
#eva-previous
